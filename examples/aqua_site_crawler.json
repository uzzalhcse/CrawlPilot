{
  "name": "Aqua E-commerce Site Crawler",
  "description": "Comprehensive crawler for Aqua e-commerce site with product details extraction and URL hierarchy tracking",
  "config": {
    "start_urls": [
      "https://aqua-has.com"
    ],
    "max_depth": 3,
    "max_pages": 100,
    "rate_limit_delay": 2000,
    "data_extraction_patterns": [
      "*/product/*",
      "*/item/*",
      "*/detail/*"
    ],
    "storage": {
      "type": "database",
      "table_name": "aqua_products"
    },
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
    },
    "url_discovery": [
      {
        "id": "discover_main_categories",
        "type": "extract_links",
        "name": "Discover Main Product Categories a",
        "params": {
          "selector": "ul.Header_Navigation_List_Item_Sub_Group_Inner a",
          "url_type": "category",
          "limit": 5
        }
      },
      {
        "id": "discover_product_listings",
        "type": "extract_links",
        "name": "Discover Product Listing Pages",
        "params": {
          "selector": "div.CategoryTop_Series_Item_Content_List a",
          "url_type": "product",
          "limit": 10
        },
        "dependencies": ["discover_main_categories"]
      }
    ],
    "data_extraction": [
      {
        "id": "extract_aqua_product_data",
        "type": "extract",
        "name": "Extract Aqua Product Details",
        "params": {
          "schema": "aqua_product",
          "timeout": 10000,
          "fields": {
            "page_title": {
              "selector": "title",
              "type": "text",
              "transform": "trim"
            },
            "product_name": {
              "selector": ".ProductInfo_Head_Main_ProductName",
              "type": "text",
              "transform": "trim"
            },
            "maker": {
              "selector": "meta[property='og:site_name']",
              "type": "attr",
              "attribute": "content",
              "transform": "trim",
              "default": "AQUA"
            },
            "brand": {
              "selector": "meta[property='og:site_name']",
              "type": "attr",
              "attribute": "content", 
              "transform": "trim",
              "default": "AQUA"
            },
            "category": {
              "selector": ".ProductDetail_Section_Headline_Sub",
              "type": "text",
              "transform": "trim"
            },
            "description": {
              "selector": "div.ProductDetail_Section_Text_Group",
              "type": "text",
              "transform": "clean_html"
            },
            "list_price": {
              "selector": ".ProductInfo_PriceArea_OpenPrice",
              "type": "text",
              "transform": "trim",
              "default": "Open Price"
            }
          }
        }
      }
    ]
  },
  "status": "active"
}