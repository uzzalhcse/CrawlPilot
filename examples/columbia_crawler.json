{
  "name": "columbia Site Crawler",
  "description": "columbia",
  "config": {
    "start_urls": [
      "https://www.columbiasports.co.jp/shop/default.aspx"
    ],
    "max_depth": 3,
    "rate_limit_delay": 2000,
    "storage": {
      "type": "database"
    },
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
    },
    "url_discovery": [
      {
        "id": "discover_main_categories",
        "type": "extract_links",
        "name": "Discover Main Product Categories a",
        "params": {
          "selector": "ul.block-header-gnav li a",
          "url_type": "category",
          "limit": 2
        }
      },
      {
        "id": "paginate_products",
        "type": "paginate",
        "name": "Paginate Through Product Listings",
        "params": {
          "next_selector": "div.direction_.next_ a.btn_",
          "link_selector": "div.pagination_ ul.number_ li a",
          "max_pages": 20,
          "type": "auto",
          "wait_after": 2000,
          "item_selector": "ul.block-thumbnail-t--items a",
          "url_type": "product"
        },
        "dependencies": ["discover_main_categories"]
      }
    ],
    "data_extraction": [
      {
        "id": "extract_columbia_product_data",
        "type": "extract",
        "name": "Extract columbia Product Details",
        "params": {
          "schema": "columbia_product",
          "timeout": 10000,
          "limit": 10,
          "fields": {
            "title": {
              "selector": "title",
              "type": "text",
              "transform": "trim"
            },
            "name": {
              "selector": "h1.block-goods-name--text span",
              "type": "text",
              "transform": "trim"
            },
            "description": {
              "selector": "div#spec_goods_comment",
              "type": "text",
              "transform": "clean_html"
            },
            "list_price": {
              "selector": "div.block-goods-price--default-price",
              "type": "text",
              "transform": "trim",
              "default": "Open Price"
            }
          }
        }
      }
    ]
  },
  "status": "active"
}