{
  "name": "Oxylabs Sandbox Product Crawler",
  "description": "Comprehensive crawler for sandbox.oxylabs.io using phase-based architecture with field-level actions",
  "config": {
    "start_urls": [
      "https://sandbox.oxylabs.io/products"
    ],
    "max_depth": 2,
    "rate_limit_delay": 1000,
    "headers": {
      "User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
    },
    "phases": [
      {
        "id": "discover_products",
        "type": "discovery",
        "name": "Discover Product Links",
        "nodes": [
          {
            "id": "navigate_to_products",
            "type": "navigate",
            "name": "Navigate to Products Page",
            "params": {
              "url": "{{start_url}}",
              "timeout": 60000
            }
          },
          {
            "id": "wait_for_products",
            "type": "wait_for",
            "name": "Wait for Products to Load",
            "params": {
              "condition": "selector",
              "selector": "a.card-header",
              "state": "visible",
              "timeout": 10000
            }
          },
          {
            "id": "paginate_and_collect",
            "type": "paginate",
            "name": "Paginate Through Product Pages",
            "params": {
              "selector": "a[aria-label='Next page']",
              "link_selector": "a.card-header",
              "marker": "product",
              "max_pages": 5,
              "wait_between_pages": 1500,
              "timeout": 10000
            }
          }
        ],
        "url_filter": {
          "depth": 0
        },
        "transition": {
          "condition": "all_nodes_complete",
          "next_phase": "extract_product_data"
        }
      },
      {
        "id": "extract_product_data",
        "type": "extraction",
        "name": "Extract Product Details",
        "nodes": [
          {
            "id": "navigate_to_product",
            "type": "navigate",
            "name": "Navigate to Product Page",
            "params": {
              "url": "{{current_url}}",
              "timeout": 60000
            }
          },
          {
            "id": "extract_oxylabs_product",
            "type": "extract",
            "name": "Extract Oxylabs Product Details",
            "params": {
              "schema": "oxylabs_product",
              "fields": {
                "page_title": {
                  "selector": "title",
                  "type": "text",
                  "transform": "trim"
                },
                "product_name": {
                  "selector": "h4",
                  "type": "text",
                  "transform": "trim",
                  "actions": [
                    {
                      "id": "wait_for_title",
                      "type": "wait_for",
                      "name": "Wait for Product Title",
                      "params": {
                        "condition": "selector",
                        "selector": "h4",
                        "state": "visible",
                        "timeout": 10000
                      }
                    }
                  ]
                },
                "price": {
                  "selector": ".price-wrapper",
                  "type": "text",
                  "transform": "trim",
                  "default": "N/A",
                  "actions": [
                    {
                      "id": "wait_for_price",
                      "type": "wait_for",
                      "name": "Wait for Price to Load",
                      "params": {
                        "condition": "selector",
                        "selector": ".price-wrapper",
                        "state": "visible",
                        "timeout": 10000
                      }
                    }
                  ]
                },
                "description": {
                  "selector": "p.description",
                  "type": "text",
                  "transform": "trim",
                  "actions": [
                    {
                      "id": "scroll_to_description",
                      "type": "scroll",
                      "name": "Scroll to Description",
                      "params": {
                        "selector": "p.description"
                      }
                    },
                    {
                      "id": "wait_for_description",
                      "type": "wait_for",
                      "name": "Wait for Description Visible",
                      "params": {
                        "condition": "selector",
                        "selector": "p.description",
                        "state": "visible",
                        "timeout": 5000
                      }
                    }
                  ]
                },
                "image": {
                  "selector": "img[alt]",
                  "type": "attr",
                  "attribute": "src",
                  "default": ""
                },
                "categories": {
                  "selector": ".category",
                  "type": "text",
                  "transform": "trim",
                  "multiple": true
                }
              }
            }
          },
          {
            "id": "screenshot_product",
            "type": "screenshot",
            "name": "Capture Product Screenshot",
            "params": {
              "full_page": false,
              "save_as_item": true,
              "save_to_disk": "./screenshots"
            }
          }
        ],
        "url_filter": {
          "markers": [
            "product"
          ]
        }
      }
    ]
  },
  "status": "active"
}